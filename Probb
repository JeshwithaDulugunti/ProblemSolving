    <style>
        body {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 100vh;
            background-color: white;
            position: relative;
            overflow: hidden;
        }

        .light-bulb {
            width: 150px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .button {
            position: absolute;
            bottom: 50px;
            padding: 10px 20px;
            font-size: 16px;
